<article class="tour-detail">
  {{#each place.location.coordinates}}
  <input type="hidden" name="placeData" id="placeData{{@index}}" value="{{this}}" />
  {{/each}}
  <div class="row">
    <div class="col-sm-12">
      <div class="place-detail-photo" style="background-image: url('{{place.image}}');">

        <h3 id="place-detail-name" class="tour-detail-nametour">
          {{#if place.recommended}}
          <i class="fa fa-star recommended-star"></i>
          {{/if}}
          {{dotdotdot place.name 30}}</h3>

        {{!-- Tour Rating --}}
        <div class="place-detail-rating">
          <span class="rating-num text-white">{{place.rating}}</span>
          {{!-- Beer 1 --}}
          {{#ifCond place.rating '<=' 0}}
          <img src="/img/star-off.png" alt="1">
          {{ else ifCond place.rating '>=' 1}}
          <img src="/img/star-on.png" alt="1">
          {{ else ifCond place.rating '>=' 0.5}}
          <img src="/img/star-half.png" alt="1">
          {{ else }}
          <img src="/img/star-off.png" alt="1">
          {{/ifCond}}

          {{!-- Beer 2 --}}
          {{#ifCond place.rating '<=' 1}}
          <img src="/img/star-off.png" alt="2">
          {{ else ifCond place.rating '>=' 2}}
          <img src="/img/star-on.png" alt="2">
          {{ else ifCond place.rating '>=' 1.5}}
          <img src="/img/star-half.png" alt="2">
          {{ else }}
          <img src="/img/star-off.png" alt="2">
          {{/ifCond}}

          {{!-- Beer 3 --}}
          {{#ifCond place.rating '<=' 2}}
          <img src="/img/star-off.png" alt="3">
          {{ else ifCond place.rating '>=' 3}}
          <img src="/img/star-on.png" alt="3">
          {{ else ifCond place.rating '>=' 2.5}}
          <img src="/img/star-half.png" alt="3">
          {{ else }}
          <img src="/img/star-off.png" alt="3">
          {{/ifCond}}

          {{!-- Beer 4 --}}
          {{#ifCond place.rating '<=' 3}}
          <img src="/img/star-off.png" alt="4">
          {{ else ifCond place.rating '>=' 4}}
          <img src="/img/star-on.png" alt="4">
          {{ else ifCond place.rating '>=' 3.5}}
          <img src="/img/star-half.png" alt="4">
          {{ else }}
          <img src="/img/star-off.png" alt="4">
          {{/ifCond}}

          {{!-- Beer 5 --}}
          {{#ifCond place.rating '<=' 4}}
          <img src="/img/star-off.png" alt="5">
          {{ else ifCond place.rating '>=' 5}}
          <img src="/img/star-on.png" alt="5">
          {{ else ifCond place.rating '>=' 4.5}}
          <img src="/img/star-half.png" alt="5">
          {{ else }}
          <img src="/img/star-off.png" alt="5">
          {{/ifCond}}
        </div>
      </div>


      <div class="place-detail-map">
        <div id="map"></div>
        <div id="infowindow-content">
          <img src="" width="16" height="16" id="place-icon" />
          <span id="place-detail-name" class="title"></span><br />
          <span id="place-detail-address"></span>
        </div>
      </div>

    </div>




