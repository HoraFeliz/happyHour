    {{!-- Place info --}}
    <div class="col-sm-12 mb-3">
      <div class="row">
        <div class="col-1 info-icon">
          <i class="fas fa-map-marker-alt"></i>
        </div>
        <div class="col-11 info-col">
          <p id="place-detail-address-text" class="place-text-location">{{place.address}}</p>
        </div>
        <div class="col-1 info-icon">
          <i class="fas fa-calendar-check"></i>
        </div>
        <div class="col-11 info-col">
          <p class="place-text-location"><strong>{{#if place.isOpen}}</strong><span class="text-green">
              <strong>Open</strong> </span>{{else}}</strong><span class="text-red">Close</span>{{/if}}</p>
          {{#each place.openingHours}}
          <p class="schedule">{{this}}</p>
          {{/each}}
        </div>
        <div class="col-1 info-icon">
          <img src="/img/price-icon-red.svg" alt="Price" style="height: 17px; fill: red">
        </div>
        <div class="col-11 info-col">
          {{#if place.priceLevel}}
          <p class="place-text-location place-text-price">
            {{#ifCond place.priceLevel '==' 1}}€ <span class="price-text-muted">€ €</span>
            {{ else ifCond place.priceLevel '==' 2}}€ € <span
              class="price-text-muted">€{{ else ifCond place.priceLevel '==' 3}}€€€{{/ifCond}}
          </p>
          {{/if}}
        </div>
      </div>

