<div class="purple-back purple-back-select">
    <div class="create-tour-img">
        <h3 class="select-place-tour font-regular"><strong>Select </strong>Place on Tour</h3>
        <img src="/img/selectplaceontour.png" alt="AppyHour Tour" style="margin-top:-7px; margin-left: -5px;">
    </div>
</div>

<h3>{{tour.name}}</h3>
{{!-- Google Search --}}
<div class="pac-card" id="pac-card">
    <div>
        <div class="panel-back">
            <div id="pac-container">
                <input id="pac-input" type="text" placeholder="Enter a location" />
            </div>
        </div>
    </div>
</div>
<div id="map"></div>
<div id="infowindow-content">
    <img src="" width="16" height="16" id="place-icon" />
    <span id="place-name" class="title"></span><br />
    <span id="place-address"></span>
</div>

<form method="POST" action="/tours/form-2/{{tour.id}}">
    <button class="btn btn-purple btn-block text-white include-button mb-2">Include Place on Tour</button>
    <input type="hidden" name="placeData" id="placeData" />
</form>


<div class="row pt-3">
    {{#each places}}
    <div class="col-3">
        <div class="tour-detail-list-photo" style="background-image: url('{{this.image}}');">
        </div>
        {{#if @index}}
        <div class="tour-line">
            <img class="tour-line-img" src="/img/tour-line.png" alt="Tour Line">
        </div>
        {{ else if @first}}
        <div class="tour-line">
            <img class="tour-line-img" src="/img/tour-line.png" alt="Tour Line">
        </div>
        {{/if}}
    </div>
    <div class="col-9">
        <div class="tour-circle">
            <p class="tour-num">{{inc @index}}</p>
            <img src="/img/tour-circle-purple.png" alt="Circle Purple">
        </div>
        <a href="/place/{{this._id}}"></a>
        <h3 class="tour-create-title">{{dotdotdot this.name 35}}</h3>
        <p class="tour-desc">{{dotdotdot this.address 60}}</p>

        <div class="row">
            <div class="col-3">
                <form action="/tours/form-2/delete/{{this._id}}" method="POST">
                    <input type="hidden" name="tourId" id="tourId" value="{{../tour.id}}">
                    <button type="submit" class="btn btn-danger btn-delete">
                        <i class="fa fa-trash"></i>
                    </button>
                </form>
            </div>

            {{!-- Tour Rating --}}
            <div class="col-12 pb-3 tour-create-rating">
                {{!-- <span class="user-rating">(74)</span> --}}
                <span class="rating-num">{{this.rating}}</span>

                {{!-- Star 1 --}}
                {{#ifCond this.rating '<=' 0}}
                <img src="/img/star-off.png" alt="1">
                {{ else ifCond this.rating '>=' 1}}
                <img src="/img/star-on.png" alt="1">
                {{ else ifCond this.rating '>=' 0.5}}
                <img src="/img/star-half.png" alt="1">
                {{ else }}
                <img src="/img/star-off.png" alt="1">
                {{/ifCond}}

                {{!-- Star 2 --}}
                {{#ifCond this.rating '<=' 1}}
                <img src="/img/star-off.png" alt="2">
                {{ else ifCond this.rating '>=' 2}}
                <img src="/img/star-on.png" alt="2">
                {{ else ifCond this.rating '>=' 1.5}}
                <img src="/img/star-half.png" alt="2">
                {{ else }}
                <img src="/img/star-off.png" alt="2">
                {{/ifCond}}

                {{!-- Star 3 --}}
                {{#ifCond this.rating '<=' 2}}
                <img src="/img/star-off.png" alt="3">
                {{ else ifCond this.rating '>=' 3}}
                <img src="/img/star-on.png" alt="3">
                {{ else ifCond this.rating '>=' 2.5}}
                <img src="/img/star-half.png" alt="3">
                {{ else }}
                <img src="/img/star-off.png" alt="3">
                {{/ifCond}}

                {{!-- Star 4 --}}
                {{#ifCond this.rating '<=' 3}}
                <img src="/img/star-off.png" alt="4">
                {{ else ifCond this.rating '>=' 4}}
                <img src="/img/star-on.png" alt="4">
                {{ else ifCond this.rating '>=' 3.5}}
                <img src="/img/star-half.png" alt="4">
                {{ else }}
                <img src="/img/star-off.png" alt="4">
                {{/ifCond}}

                {{!-- Star 5 --}}
                {{#ifCond this.rating '<=' 4}}
                <img src="/img/star-off.png" alt="5">
                {{ else ifCond this.rating '>=' 5}}
                <img src="/img/star-on.png" alt="5">
                {{ else ifCond this.rating '>=' 4.5}}
                <img src="/img/star-half.png" alt="5">
                {{ else }}
                <img src="/img/star-off.png" alt="5">
                {{/ifCond}}
            </div>

        </div>
        {{!-- Delete Place on Tour --}}
    </div>
    {{/each}}
</div>




<div class="row pb-3 pt-3">
    <div class="col-3">
        <img src="/img/more-info-tour.png" alt="La Perla">
    </div>
    <div class="col-9">
        <h3 class="tour-next-place">Next Place</h3>
    </div>
</div>
<button type="submit" class="btn btn-purple text-white btn-block mt-3 pt-2 pb-2">Save Tour</button>