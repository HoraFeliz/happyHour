{{!-- Place Rating --}}
<div class="col-12 tour-rating">
    {{!-- <span class="user-rating">(74)</span> --}}
    <span class="rating-num">{{this.rating}}</span>

    {{!-- Star 1 --}}
    {{#ifCond this.rating '<=' 0}}
    <img src="/img/star-off.png" alt="1">
    {{ else ifCond this.rating '>=' 1}}
    <img src="/img/star-on.png" alt="1">
    {{ else ifCond this.rating '>=' 0.5}}
    <img src="/img/star-half.png" alt="1">
    {{ else }}
    <img src="/img/star-off.png" alt="1">
    {{/ifCond}}

    {{!-- Star 2 --}}
    {{#ifCond this.rating '<=' 1}}
    <img src="/img/star-off.png" alt="2">
    {{ else ifCond this.rating '>=' 2}}
    <img src="/img/star-on.png" alt="2">
    {{ else ifCond this.rating '>=' 1.5}}
    <img src="/img/star-half.png" alt="2">
    {{ else }}
    <img src="/img/star-off.png" alt="2">
    {{/ifCond}}

    {{!-- Star 3 --}}
    {{#ifCond this.rating '<=' 2}}
    <img src="/img/star-off.png" alt="3">
    {{ else ifCond this.rating '>=' 3}}
    <img src="/img/star-on.png" alt="3">
    {{ else ifCond this.rating '>=' 2.5}}
    <img src="/img/star-half.png" alt="3">
    {{ else }}
    <img src="/img/star-off.png" alt="3">
    {{/ifCond}}

    {{!-- Star 4 --}}
    {{#ifCond this.rating '<=' 3}}
    <img src="/img/star-off.png" alt="4">
    {{ else ifCond this.rating '>=' 4}}
    <img src="/img/star-on.png" alt="4">
    {{ else ifCond this.rating '>=' 3.5}}
    <img src="/img/star-half.png" alt="4">
    {{ else }}
    <img src="/img/star-off.png" alt="4">
    {{/ifCond}}

    {{!-- Star 5 --}}
    {{#ifCond this.rating '<=' 4}}
    <img src="/img/star-off.png" alt="5">
    {{ else ifCond this.rating '>=' 5}}
    <img src="/img/star-on.png" alt="5">
    {{ else ifCond this.rating '>=' 4.5}}
    <img src="/img/star-half.png" alt="5">
    {{ else }}
    <img src="/img/star-off.png" alt="5">
    {{/ifCond}}
</div>